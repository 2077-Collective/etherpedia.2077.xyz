---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import type { Post } from "../services/PostsService";

type Props = Post

const { title, summary, author, createdAt, updatedAt, thumb } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={summary} />
  </head>

  <body
    class="flex flex-col min-h-screen dark dark:bg-zinc-900 dark:text-white"
  >
    <Header />
    <main>
      <article class="mx-auto max-w-screen-md mb-32">
        <div class="sm:p-4 max-w-screen-md">
          {
            thumb && (
              <img class="w-full sm:rounded-xl" src={thumb} alt="" />
            )
          }
        </div>
        <div class="px-4 mt-4">
          <div class="date">
            <FormattedDate date={createdAt} />
            {
              updatedAt && (
                <div class="last-updated-on">
                  Last updated on <FormattedDate date={updatedAt} />
                </div>
              )
            }
          </div>
          <h1 class="font-bold text-4xl">{title}</h1>

          <div class="flex items-center gap-x-1.5">
            <span>By</span>

            {author.map((author: {name: string, twitterHandle: string }, index: number) => (
              <p class="italic py-4">
                {index < author.length - 1 ? (
                  <>
                    <a class="underline underline-offset-3 decoration-clone"
                      href={`https://twitter.com/${author.twitterHandle}`}
                      target="_blank"
                    >
                      {author.name} 
                    </a>
            {index < author.length - 2 ? ', ' : ' and '}
                  </>
                ) : (
                  <a class="underline underline-offset-3"
                    href={`https://twitter.com/${author.twitterHandle}`}
                    target="_blank"
                  >
                    {author.name}
                  </a>
                )}
              </p>
            ))}
          </div>
          <hr class="pb-8" />
          <div class="prose dark:prose-invert">
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
